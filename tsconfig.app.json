{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "composite": true // Ensure this is enabled
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"], // Restrict to frontend files
  "references": [{ "path": "./tsconfig.node.json" }]
}

