{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist/server",
    "rootDir": "src/server",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true, // Ensure this is enabled
    "types": ["node", "vitest/globals"]
  },
  "include": ["src/server/**/*"], // Include server files
  "exclude": ["node_modules", "src/server/__tests__"]
}

